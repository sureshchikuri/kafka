		</dependency>
	</dependencies>
	<!-- build plugin details to create single application executable jar -->
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							Â                            <!-- Provide complete main class details of the project (PackageName.Class) -->
							<mainClass>com.project.kafka.producerpackage.FilterStream</mainClass>
						</manifest>
					</archive>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
